<Window x:Class="Week7DemoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week7DemoWPF"
        mc:Ignorable="d"
        Title="WPF Demo" Height="800" Width="800">
    <Grid Loaded="Grid_Loaded">
        <TextBlock x:Name="WelcomeTxT" HorizontalAlignment="Center" Margin="0,65,0,0" TextWrapping="Wrap" Text="Welcome" VerticalAlignment="Top" Height="39" Width="380" FontWeight="Bold" FontSize="18" TextAlignment="Center"/>
        <TextBox x:Name="PlayerNameInput" HorizontalAlignment="Center" Margin="0,169,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="Instructions" Content="Please Enter Your Name:" HorizontalAlignment="Center" Margin="0,138,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Left" Margin="488,167,0,0" VerticalAlignment="Top" Width="86" Height="29" Click="SubmitButton_Click"/>

    </Grid>
</Window>
